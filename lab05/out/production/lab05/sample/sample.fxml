<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <TableView fx:id="tabview" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <columns>
            <TableColumn text ="SID">
                <cellValueFactory><PropertyValueFactory property="studentId" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn text = "SName">
                <cellValueFactory><PropertyValueFactory property="studentName" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn text = "Assignment"> // CHANGE THIS TO MULTIPLE CUMULATIVE ASSIGNMENT GRADES
                <cellValueFactory><PropertyValueFactory property="assignmentGrade" />
                </cellValueFactory>
            </TableColumn>

        </columns>
    </TableView>

</AnchorPane>
